<resources>
    <!-- Base application theme. -->
    <style name="Theme.DearWinterILoveYou" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">@color/blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="_mainInfoTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:fontFamily">@font/font_1</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="_mainTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="_desTitle" parent="_mainTitle">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="_locationTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:maxLength">25</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableStart">@drawable/ic_location</item>
        <item name="android:drawablePadding">@dimen/_1sdp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="_tempTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/font_1</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLength">6</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="progress_">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_margin">@dimen/_20sdp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:visibility">invisible</item>
    </style>
</resources>
